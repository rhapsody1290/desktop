<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/main_info_backimage"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/main_info_image" />

    <ImageView
        android:id="@+id/main_info_greyimage"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="-25dp"
        android:src="@drawable/main_info_grey" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="18dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/main_info_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="14"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <LinearLayout
            android:id="@+id/main_info_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/main_info_day"
            android:layout_toRightOf="@id/main_info_day"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/main_info_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="OCT"
                android:textColor="@color/white"
                android:textSize="8dp" />

            <TextView
                android:id="@+id/main_info_week"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="星期三"
                android:textColor="@color/white"
                android:textSize="8dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/main_info_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/main_info_day"
            android:layout_centerHorizontal="true"
            
            android:ellipsize="end"
            android:maxLength="12"
            android:singleLine="true"
            android:text="美国梅奥心脏干细胞技术"
            android:textColor="@color/white"
            android:textSize="18dp" />
    </RelativeLayout>
    
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal" >
        
        <TextView
            android:id="@+id/main_info_progress2"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_centerInParent="true"
            android:background="@drawable/progress_grey" >
        </TextView>

        <TextView
            android:id="@+id/main_info_progress1"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_alignBottom="@id/main_info_progress2"
            android:layout_toLeftOf="@id/main_info_progress2"
            android:layout_marginRight="5dp"
            android:background="@drawable/progress_white" >
        </TextView>

        <TextView
            android:id="@+id/main_info_progress3"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_alignBottom="@id/main_info_progress2"
            android:layout_toRightOf="@id/main_info_progress2"
            android:layout_marginLeft="5dp"
            android:background="@drawable/progress_grey" >
        </TextView>
    </RelativeLayout>

</FrameLayout>